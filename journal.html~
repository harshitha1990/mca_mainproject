<script>
	$(function(){
		$("#journaladd").click(function(){
			$.post("insert.php?seed="+Math.random(),{
				method:'journal',
				jsimpactfactor:$("#impactfactor").val(),
				jstitle:$("#jtitle").val(),
				jseventname:$("#jname").val(),
				jstartyear:$("#jstartyear").val(),
				jsendyear:$("#jendyear").val()
			},function(data){
				alert(data);
			});
		});
	});
</script>

