			<input type="text" class="smalltext" value="2013" style="width:40px" id="pstartyear"/>&nbsp;-&nbsp;<input type="text" class="smalltext" value="2014" style="width:40px" id="pendyear"/><br/><br/>
			<button type="button" class="btn btn-primary btn-lg" id="presentededit" class="add">Edit</button>
		</form>
	</div>
	<!--------------------------------------------------------------------------------------------------------------->
	<div id="edit-journal">
		<form>		
			<label>Title of the paper</label>
			<input type="text" id="jtitle"/>
			<label>Journal</label>
			<input type="text" id="jname"/>
			<label>Date</label>
			<input type="date" id="jdate"/><br/><br/>
			<label>Impact Factor</label>&nbsp;&nbsp;
			<select id="impactfactor">
				<option>0</option>
				<option>0.5</option>
				<option>1</option>
